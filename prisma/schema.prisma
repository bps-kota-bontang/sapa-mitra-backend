generator client {
  provider      = "prisma-client-js"
  output        = "./generated/client"
  binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Team {
  SOSIAL
  PRODUKSI
  DISTRIBUSI
  NERWILIS
  IPDS
  TU
}

enum Position {
  ANGGOTA
  KETUA
  KEPALA
}

enum CategoryActivity {
  ENUMERATION
  SUPERVISION
  PROCESSING
}

model Activity {
  id        String           @id @default(uuid()) @map("_id")
  name      String
  code      String
  unit      String
  category  CategoryActivity
  team      Team
  isSpecial Boolean
  year      Int
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
  Output    Output[]

  @@map("activities")
}

model User {
  id        String   @id @default(uuid()) @map("_id")
  name      String
  nip       String   @unique
  email     String   @unique
  password  String
  team      Team?
  position  Position
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Output {
  id         String   @id @default(uuid()) @map("_id")
  activityId String
  name       String
  unit       String
  year       Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  activity Activity @relation(fields: [activityId], references: [id])

  @@map("outputs")
}

model Partner {
  id        String   @id @default(uuid()) @map("_id")
  name      String
  nik       String   @unique
  address   String
  year      Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("partners")
}

enum TypeConfiguration {
  AUTHORITY
  REGION
  RATE
}

model Configuration {
  id        String            @id @default(uuid()) @map("_id")
  name      TypeConfiguration @unique
  value     Json
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt

  @@map("configurations")
}
